#!/bin/sh

BUILD_DIR=$1
CACHE_DIR=$2

apt-get install unzip

mkdir -p "$BUILD_DIR/vendor/chromedriver/"
mkdir -p "$BUILD_DIR/vendor/chromedriver/bin"

echo "Downloading and installing ChromeDriver to ${BUILD_DIR}"

wget -N http://chromedriver.storage.googleapis.com/2.10/chromedriver_linux64.zip -P "$BUILD_DIR/vendor/chromedriver"
unzip "$BUILD_DIR/vendor/chromedriver/chromedriver_linux64.zip" -d "$BUILD_DIR/vendor/chromedriver"
rm "$BUILD_DIR/vendor/chromedriver/chromedriver_linux64.zip"

mv "$BUILD_DIR/vendor/chromedriver/chromedriver" "$BUILD_DIR/vendor/chromedriver/bin"

echo 'success'
